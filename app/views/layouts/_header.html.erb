<header class='navbar navbar-fixed-top'>
	<div class='navbar-inner'>
		<div class='container'>
			<%= link_to "Hexed", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "WoW", wow_path %></li>
					<li><%= link_to "TERA", tera_path %></li>
					<li><%= link_to "Forum", "#" %></li>
					<% if signed_in? %>
						<li><%= link_to "Members", members_path %></li>
						<li id='fat-menu' class='dropdown'>
							<a href="#" class='dropdown-toggle' data-toggle='dropdown'>
								Account <b class='caret'></b>
							</a>
							<ul class='dropdown-menu'>
								<li><%= link_to "Profile", member_path(current_user.character) %></li>
								<li><%= link_to "Settings", edit_member_path(current_user.character) %></li>
								<li class='divider'></li>
								<li>
									<%= link_to "Sign Out", signout_path, method: "delete" %>
								</li>
							</ul>
						</li>
					<% else %>
						<li><%= link_to "Sign In", signin_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>
