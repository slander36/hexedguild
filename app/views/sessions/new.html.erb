<% provide(:title, "Sign In") %>
<h1>Sign In</h1>

<div class='row'>
	<div class='span6 offset3'>
		<%= simple_form_for(:session, url: sessions_path) do |f| %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.submit "Sign In", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>Not a memeber yet? <%= link_to "Apply now!", apply_path %></p>
	</div>
</div>
